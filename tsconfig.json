{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./build",
    "jsx": "react",
    "rootDirs": ["src", "__tests__"],
    "baseUrl": "./src",
    "paths": {
      "@domain/*": ["domain/*"],
      "@data/*": ["data/*"],
      "@infra/*": ["infra/*"],
      "@main/*": ["main/*"],
      "@shared/*": ["shared/*"],
      "@validation/*": ["validation/*"],
      "@tests/*": ["../tests/*"]
    },
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "tests",
    "node_modules/jest-dom"
  ],
  "exclude": [
    "./src/main/test/cypress"
  ]
}
